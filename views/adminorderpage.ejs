
<div class="container mt-4">
    <table class="table table-bordered border-primary">
      <thead>
      <tr>
      <th>OrderId</th>
      <th>Adress</th>
      <th>Phone Number</th>
      <th>Time</th>
     
      <th>email</th>
      <th colspan="2">Status</th>
      </tr>
      </thead>
      <tbody>
        <% if(typeof allorder !='undefined'){ %>
        <% for(let u of allorder) { %>
          
      <tr>
    <td> <a href="/admin/order?id=<%= u._id %>" style="text-decoration: none;"><%= u._id %></a></td>
      <td><%= u.address %></td>
      <td><%=u.phone %></td>
      <td><%= (u.createdAt)  %></td>

      <td><%=  u.name  %></td>
      <td><button class="btn btn-danger">Cancel</button></td>
      <td>     <form action="/admin/changeorderstatus1" method="POST">
        <input type="hidden" name="orderId" value="<%= u.id %>">
        <input  type="text"  name="customerid" value="<%= u.customerId %>" style="display:none;"> 
        <select name="status" onchange="this.form.submit()"
      class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
           
      <option value="order_placed"
                <% if(u.status === 'order_placed') { %>
                  selected
                  <% } %>
                  >
                Placed</option>
            <option value="confirmed" 
            
            <% if(u.status ==='confirmed') { %>
            selected
           <% } %>
            >
                Confirmed</option>
            <option value="prepared"  <% if(u.status === 'prepared') {  %> 
              
              selected
              <% } %>
              >
                Prepared</option>
            <option value="delivered"  <% if(u.status === 'delivered') { %> 
              selected
              <% } %>
              >
                Delivered
            </option>
            <option value="completed"  <% if(u.status === 'completed'){  %> 
              selected
              <% } %>
              
              >
                Completed
            </option>
        </select>
    </form></td>  
    </tr>
     
          <% } %>
      <% } %>
    
    
        </tbody>
    </table>
    <% if(typeof mycartItem !='undefined'){ %>
    <h5 style="text-align: center;">Total:- Rs.<%= total %></h5>
    <h6 style="text-align: center;">Thanks for Ordering..</h6>
    <h6 style="text-align: center;">Order will deleiver Soon.</h6>
    <% } %>
    </div>