<h2 style="
    text-align: center;
    margin-bottom: 20px;
    margin-top: 20px;
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  ">
    Add a Restaurant
</h2>

<div class="container">
    <h6>Basic info-Get Started</h6>

    <form action="/user/addhotel" enctype="multipart/form-data"  method="POST">
        <div class="form-group mb-3">
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="hotelname"
                placeholder="Enter Restaurant Name" required />
        </div>

        <div class="form-group mb-3">
            <input type="email" class="form-control" id="exampleInputPassword1" name="email" placeholder="Working email" />
        </div>

        <h6>Address:</h6>
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="input-group">
                    <input type="text" class="form-control" id="validationDefaultUsername" name="locality" placeholder="Locality"
                        aria-describedby="inputGroupPrepend2" required />
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <input type="text" class="form-control" id="validationDefault03" name="street" placeholder="Street" required />
            </div>
            <div class="col-md-3 mb-3">
                <input type="text" class="form-control" id="validationDefault04"  placeholder="Floor/AppartmentName"
                    required />
            </div>
            <div class="col-md-3 mb-3">
                <input type="text" class="form-control" id="validationDefault05" name="zip" placeholder="Zip" required />
            </div>
            <div class="col-md-3 mb-3">
                <input type="text" class="form-control" id="validationDefault05" name="contactNumber" placeholder="Conatact number"
                    required />
            </div>

          
            <div class="col-md-6 mb-3">
                <input type="password" class="form-control" id="validationDefault05" name="password" placeholder="Password" required />
            </div>
            <div class="col-md-6 mb-3">
                <input type="password" class="form-control" id="validationDefault05" name="cpassword" placeholder=" confirm Password"
                    required />
            </div>
        </div>
        <div class="mb-3">
            <label for="formFileSm" class="form-label">Restaurent Image</label>
            <input class="form-control form-control-sm" name="avatar" id="formFileSm" type="file" required />
          </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Short And Crisp Description</label>
            <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"></textarea>
           </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success mt-2">Submit</button>
        </div>
    </form>
</div>


